<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label mb-0">Title</label>
          <input
            name="listing[title]"
            placeholder="Add a catchy title"
            type="text"
            class="form-control"
            id="title"
            required
          />
          <div class="valid-feedback">Title loooks good!</div>
          <div class="invalid-feedback">Please enter an catchy title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label mb-0">Description</label>
          <textarea
            name="listing[description]"
            type="text"
            class="form-control"
            id="description"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label mb-0"
            >Upload Listing Image</label
          >
          <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="file"
            class="form-control"
            id="image"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label mb-0">Price</label>
            <input
              name="listing[price]"
              placeholder="1200"
              type="text"
              class="form-control"
              id="price"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label mb-0">Country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              id="country"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label mb-0">Location</label>
          <input
            name="listing[location]"
            placeholder="Jaipur, Rajasthan"
            type="text"
            class="form-control"
            id="location"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark add-btn mt-3 mb-4">Add</button>
      </form>
    </div>
  </div>
</body>
