<% layout("/layouts/boilerplate") %>
<body>
  <script>
      // Pass location to JS
    const listingLocation = "<%= listing.location %>";
      // If you want coordinates:
    const listingCoordinates = <%- JSON.stringify(listing.coordinates) %>;
  </script>
  <div class="row mt-3">
    <!-- Title of listing -->
    <div class="col-8 offset-3">
      <h3><%=listing.title%></h3>
    </div>

    <!-- listing Card  -->
    <div class="card listing-card col-6 offset-3">
      <img
        src="<%=listing.image.url%>"
        alt="listing_image"
        class="card-img-top"
        style="height: 30vh"
      />
      <div class="card-body">
        <p class="card-text">Owned by <i><%=listing.owner.username%></i></p>
        <p class="card-text"><%=listing.description%></p>
        <p class="card-text">
          &#8377; <%=listing.price.toLocaleString("en-IN")%>
        </p>
        <p class="card-text"><%=listing.location%></p>
        <p class="card-text"><%=listing.country%></p>
      </div>
    </div>

    <br />

    <!-- If the user is logged in, show the edit and delete buttons -->
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns">
      <a
        href="/listings/<%=listing.id%>/edit"
        class="btn btn-dark edit-btn col-1 offset-3"
        >Edit</a
      >
      <form action="/listings/<%=listing.id%>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
    <%}%>

    <!-- Review Form -->
    <div class="col-8 offset-3 mb-3">
      <% if(currUser){ %>
      <hr />
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%=listing.id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <!--Review section-->
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating"
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 star</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 star</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 star</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 star</label>
          </fieldset>
        </div>
        <!--Comments section-->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
        </div>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          cols="30"
          rows="5"
          required
        ></textarea>

        <div class="invalid-feedback">Please add some comments for review</div>
        <button class="btn btn-outline-dark mt-3">Submit</button>

        <hr />
      </form>
      <%}%>

      <!-- Displaying reviews if any exists -->
      <% if(listing.reviews.length>0) { %>
      <div class="row">
        <p><b>All Reviews</b></p>
        <% for (let review of listing.reviews) { %>
        <div class="card mb-3 col-5 ms-3">
          <div class="card-body">
            <h5 class="card-title">@<%=review.author.username %></h5>
            <p
              class="card-text starability-result"
              data-rating="<%=review.rating%>"
            ></p>
            <p class="card-text"><%=review.comment%></p>
          </div>
          <form
            method="post"
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
            class="mb-3"
          >
            <%if(currUser){%>
            <button class="btn btn-dark">Delete</button>
            <%}%>
          </form>
        </div>
        <% } %>
      </div>
      <%}%>
    </div>

    <!-- map section-->
    <div class="col-8 offset-3 mb-3">
      <h3>Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
  <script src="/js/map.js"></script>
</body>
